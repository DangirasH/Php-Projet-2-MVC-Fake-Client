{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/contact.css">
{% endblock %}

{% block content %}

	<main class="container">
		<ul>
			{% for error in errors %}
				<li>
					{{ error }}
				</li>
			{% endfor %}
		</ul>

		<section class="contact">
			<h2 class="title text-center lacetitle">Contact</h2>

			<form method="post" class="col-lg-8 d-flex flex-column m-auto" >
				<div class="mt-3">
					<label for="lastname" class="form-label">Nom</label>
					<input type="lastname" class="form-control" value="{{ contact.lastname }}" name="lastname" id="name" aria-describedby="">
				</div>
				<div class="mt-3">
					<label for="firstname" class="form-label">Pr√©nom</label>
					<input type="firstname" class="form-control" value="{{ contact.firstname }}" name="firstname" id="firstname" aria-describedby="">
				</div>
				<div class="mt-3">
					<label for="email" class="form-label">Email</label>
					<input type="email" class="form-control" value="{{ contact.email }}" name="email" id="email" aria-describedby="">
				</div>
				<div class="mt-3">
					<label for="message" class="form-label">Message</label>
					<textarea type="message" class="form-control" value="{{ contact.message }}" name="message" id="message" composer require symfony/mailer></textarea>
				</div>

				<button type="submit" class="btn btn-primary mt-3 w-50 align-self-center">Envoyer</button>
			</form>
		</section>
	</main>
{% endblock %}
